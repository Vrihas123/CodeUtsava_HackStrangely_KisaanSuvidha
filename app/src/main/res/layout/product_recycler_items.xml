<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="225dp"
    xmlns:card_view="http://schemas.android.com/tools"
    card_view:cardElevation="5dp"

    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/sub_product_card"
        android:background="@android:color/transparent">

        <ImageView
            android:id="@+id/product_image"
            android:layout_width="match_parent"
            android:layout_height="225dp"
            android:scaleType="fitXY"/>

        <View
            android:id="@+id/line_category_above"
            android:layout_width="wrap_content"
            android:layout_height="1sp"
            android:layout_alignStart="@+id/product_type"
            android:layout_alignEnd="@+id/product_type"
            android:layout_alignLeft="@+id/product_type"
            android:layout_alignRight="@+id/product_type"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/product_type"
            android:background="@color/white"
            />

        <TextView
            android:id="@+id/product_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="200dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:textStyle="bold"
            android:text="Rent" />

        <View
            android:id="@+id/line_category_below"
            android:layout_width="wrap_content"
            android:layout_height="1sp"
            android:layout_alignStart="@+id/product_type"
            android:layout_alignEnd="@+id/product_type"
            android:layout_alignLeft="@+id/product_type"
            android:layout_alignRight="@+id/product_type"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/product_type"
            android:background="@color/white"
            />

    </RelativeLayout>

</android.support.v7.widget.CardView>
